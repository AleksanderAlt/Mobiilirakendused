<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/counter_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <Button
        android:text="@string/count_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:backgroundTint="@color/colorPrimary"  />
    <Button
        android:text="@string/calculator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculatorButton"
        android:backgroundTint="?android:attr/colorSecondary" />
    <Button
        android:text="@string/webView_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webButton"
        android:backgroundTint="#ff3700b3"
        android:textColor="@android:color/white"/>
    <Button
        android:text="@string/essentials_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/essentialsButton"
        android:backgroundTint="#ff3700b3"
        android:textColor="@android:color/white"/>
</LinearLayout>