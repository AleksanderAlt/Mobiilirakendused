<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/battery_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/batteryTextView" />
    <Button
        android:text="@string/battery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/batteryButton"
        android:backgroundTint="@color/colorPrimary"  />
    <Button
        android:text="@string/flashlight_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flashlightButton"
        android:backgroundTint="@color/colorPrimary"  />
    <TextView
        android:text="@string/geocoding_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/geocodingTextView" />
    <Button
        android:text="@string/geocoding_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/geocodingButton"
        android:backgroundTint="@color/colorPrimary"  />

</LinearLayout>
